		center : new naver.maps.LatLng(#{point.y},#{point.x}),
		zoom : 10
	
	}

	var marker = new naver.maps.Marker({
		position : new naver.maps.LatLng(#{point.y},#{point.x}),
		map : new naver.maps.Map('naverMap',mapConfig)
	})
	

	